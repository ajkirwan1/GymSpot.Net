@model UserGridModel

<div class="box">
    <h3>@Model.GridTitle</h3>
    <table class="table w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email Address</th>
                <th>Account Password</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserModel person in Model.Persons)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.EmailAddress</td>
                    <td>@person.AccountPassword</td>
                    <td>@person.Gender</td>
                    <td>@person.DateofBirth</td>
                    <td>@person.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>